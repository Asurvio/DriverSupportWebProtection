.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100%;
    background-color: var(--blue-cola);
}

.loader {
    display: block;
    position: fixed;
    z-index: 1000;
    left: 50%;
    top: 50%;
    width: 160px;
    transform: translate3d(-50%, -50%, 0);
}
